@model List<eProjectsSemIII.Models.Competitions>
<div class="path_menu">
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/")">Home Page</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/exhibitions/")">Exhibition</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/exhibitions/")">List of Exhibition</a>
    </div>
</div>
<div class="path_menu title_and_action">
    <div class="content_title">
        List of Exhibition
    </div>
    <div class="content_action">
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="help_action">
                </div>
                <div class="text_item_content_action">
                    Help
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="go_back_action">
                </div>
                <div class="text_item_content_action">
                    Go back
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="add_action">
                </div>
                <div class="text_item_content_action">
                    Add
                </div>
            </a>
        </div>
    </div>
    <!--#END content_action-->
</div>
<!--#END path_menu title_and_action-->
@if (ViewBag.pagingString != "")
{
<div class="path_menu">
    <div class="paging">
        @Html.Raw(ViewBag.pagingString)
    </div>
</div>
}
<!--===================================CHO DANH CHO VIEC SHOW FORM=================================================-->
<div class="path_menu">
    <div class="list_item">
        <table>
            <tr class="table_title">
                <td class="text-center">No.</td>
                <td class="text-left">Name</td>
                <td class="text-left">Start Date</td>
                <td class="text-left">Deadline Date</td>
                <td class="text-left">End Date</td>
                <td class="text-center">Kind</td>
                <td class="text-center">Conditions</td>
                <td class="text-center">Awards</td>
                <td class="text-center">Designs</td>
                <td class="text-center">Edit</td>
                <td class="text-center">Delete</td>
            </tr>
            @foreach (var competition in Model)
            {
            <tr>
                <td class="text-center num-id">@competition.ID</td>
                <td class="text-left">@competition.Name</td>
                <td class="text-left">@competition.StartDate.ToString("dd-MMM-yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                <td class="text-left">@competition.DeadlineDate.ToString("dd-MMM-yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                <td class="text-left">@competition.EndDate.ToString("dd-MMM-yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                <td class="text-center"><a href="">Kind</a></td>
                <td class="text-center"><a href="">Conditions</a></td>
                <td class="text-center"><a href="">Awards</a></td>
                <td class="text-center"><a href="">Designs</a></td>
                <td class="text-center">
                    <a href="">
                        <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                    </a>
                </td>
                <td class="text-center">
                    <a href="">
                        <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                    </a>
                </td>
            </tr>
            }
        </table>
    </div>
</div>

@if (ViewBag.pagingString != "")
{
<div class="path_menu">
    <div class="paging">
        @Html.Raw(ViewBag.pagingString)
    </div>
</div>
}
