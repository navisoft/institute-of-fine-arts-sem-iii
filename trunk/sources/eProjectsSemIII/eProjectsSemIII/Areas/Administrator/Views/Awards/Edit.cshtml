                    <div class="title_item_item_form">
                        <span>*</span> Award Name
                    </div>
                    <div class="input_item_item_form">
                        <input type="text" class="txt_input_item_item" id="Name-Item" name="Name" value="@try
                                                                                                         {@ViewBag.dataForm["Name"]}
                                                                                                         catch { }"/>
                    </div>
                </div>
                <div class="item_item_content_form">
                    <div class="title_item_item_form">
                        Description
                    </div>
                    <div class="input_item_item_form">
                        <textarea cols="" rows="" name="Description" class="txt_textarea_product">
                         @try
                         {@ViewBag.dataForm["Description"]}
                         catch { }
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
