@model List<eProjectsSemIII.Models.Designs>
<div class="path_menu">
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/")">Home Page</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/designs/")">Designs</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/designs/")">List of Designs</a>
    </div>
</div>
<div class="path_menu title_and_action">
    <div class="content_title">
        List of Designs
    </div>
    <div class="content_action">
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="help_action">
                </div>
                <div class="text_item_content_action">
                    Help
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="go_back_action">
                </div>
                <div class="text_item_content_action">
                    Go back
                </div>
            </a>
        </div>
    </div>
    <!--#END content_action-->
</div>
<!--#END path_menu title_and_action-->
@if (ViewBag.pagingString != "" && ViewBag.pagingString != null)
{
<div class="path_menu">
    <div class="paging">
        @Html.Raw(ViewBag.pagingString)
    </div>
</div>
}
<!--===================================CHO DANH CHO VIEC SHOW FORM=================================================-->
<div class="path_menu">
    <div class="list_item">
        <table>
            <tr class="table_title">
                <td class="text-center">No.</td>
                <td class="text-left design-name">Name</td>
                <td class="text-center">Image</td>
                <td class="text-left">Kind</td>
                <td class="text-left">Competition</td>
                <td class="text-center">Member</td>
                <td class="text-center paddings">Price</td>
                <td class="text-center date">Date Post</td>
                <td class="text-center">Exhibition</td>
                <td class="text-center edit">Edit</td>
                <td class="text-center">Delete</td>
            </tr>
            @foreach (var design in Model)
            {
            <tr>
                <td class="text-center num-id">@design.ID</td>
                <td class="text-left">@design.Name</td>
                <td class="text-center paddings design-image"><img alt="" src="@Url.Content("~/Content/Images/designs/thumbnails/" + design.Images)" /></td>
                <td class="text-left">
                @try
                    {
                    @design.Kind.Name
                    }
                    catch
                    {
                        <span>Not Set</span>
                    }
                </td>
                <td class="text-left">@design.Competition.Name</td>
                <td class="text-center">@design.Member.Name</td>
                <td class="text-center paddings">@design.PriceSold</td>
                <td class="text-center">@design.DatePost.ToString("dd-MMM-yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                <td class="text-center"><a href="@Url.Content("~/administrator/exhibitions/exhibitiondesign/" + @design.ID)">Exhibition</a></td>
                <td class="text-center">
                    <a href="">
                        <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                    </a>
                </td>
                <td class="text-center">
                    <a href="">
                        <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                    </a>
                </td>
            </tr>
            }
        </table>
    </div>
</div>

@if (ViewBag.pagingString != "" && ViewBag.pagingString != null)
{
<div class="path_menu">
    <div class="paging">
        @Html.Raw(ViewBag.pagingString)
    </div>
</div>
}
<!--================================#END CHO DANH CHO VIEC SHOW FORM===============================================-->
<div class="path_menu title_and_action">
    <div class="content_title">
        List of Designs
    </div>
    <div class="content_action">
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="help_action1">
                </div>
                <div class="text_item_content_action">
                    Help
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="go_back_action1">
                </div>
                <div class="text_item_content_action">
                    Go back
                </div>
            </a>
        </div>
    </div>
    <!--#END content_action-->
</div>
<!--#END path_menu title_and_action-->
