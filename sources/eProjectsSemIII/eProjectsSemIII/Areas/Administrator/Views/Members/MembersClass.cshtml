@model List<eProjectsSemIII.Models.Members>
<div class="path_menu">
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/")">Home Page</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/members/")">Members</a>
    </div>
    <div class="path_menu_item">
        <a href="@Url.Content("~/administrator/members/")">List of Members</a>
    </div>
</div>
<div class="path_menu title_and_action">
    <div class="content_title">
        List of Members
    </div>
    <div class="content_action">
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="help_action">
                </div>
                <div class="text_item_content_action">
                    Help
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="go_back_action">
                </div>
                <div class="text_item_content_action">
                    Go back
                </div>
            </a>
        </div>
        <div class="item_content_action">
            <a href="#">
                <div class="img_item_content_action" id="add_action">
                </div>
                <div class="text_item_content_action">
                    Add
                </div>
            </a>
        </div>
    </div>
    <!--#END content_action-->
</div>
<!--#END path_menu title_and_action-->
@if (ViewBag.pagingString != "")
{
    <div class="path_menu">
        <div class="paging">
            @Html.Raw(ViewBag.pagingString)
        </div>
    </div>
}
<!--===================================CHO DANH CHO VIEC SHOW FORM=================================================-->
<div class="path_menu">
    <div class="list_item">
        <table>
            <tr class="table_title">
                <td class="text-center">
                    No.
                </td>
                <td class="text-left">
                    Username
                </td>
                <td class="text-left">
                    Role
                </td>
                <td class="text-left">
                    Gender
                </td>
                <td class="text-left">
                    Name
                </td>
                <td class="text-left">
                    Class
                </td>
                <td class="text-left">
                    Address
                </td>
                <td class="text-center">
                    Images
                </td>
                <td class="text-center">
                    Phone
                </td>
                <td class="text-center">
                    Date Join
                </td>
                <td class="text-center">
                    Designs
                </td>
                <td class="text-center edit">
                    Edit
                </td>
                <td class="text-center">
                    Delete
                </td>
            </tr>
            @{
                ViewBag.i = 0;
                foreach (var member in Model)
                {
                <tr>
                    <td class="text-center num-id">@{ViewBag.i++;}@ViewBag.i</td>
                    <td class="text-left">@member.Username</td>
                    <td class="text-left">@member.Role.Name</td>
                    <td class="text-left">@member.Gender</td>
                    <td class="text-left">@member.Name</td>
                    <td class="text-left">
                        @{
                          try
                          {
                            @member.Class.Name
                          }
                          catch
                          {

                          }
                        }
                    </td>
                    <td class="text-left">@member.Address</td>
                    <td class="text-center paddings student-image"><img alt="" src="@Url.Content("~/Content/Images/students/"+@member.Images)" /></td>
                    <td class="text-left">@member.Phone</td>
                    <td class="text-center">@member.Datejoin.ToString("dd-MMM-yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</td>
                    <td class="text-center">
                    @if (member.Role.ID == 4)
                    {
                        <a href="@Url.Content("~/administrator/designs/designmember/"+member.ID)">Designs</a>
                    }
                    </td>
                    <td class="text-center">
                        <a href="">
                            <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="">
                            <img alt="" src="@Url.Content("~/Content/Images/admins/menu-icon/edit_icon_20.png")" />
                        </a>
                    </td>
                </tr>
                }
            }
        </table>
    </div>
</div>
@if (ViewBag.pagingString != "")
{
    <div class="path_menu">
        <div class="paging">
            @Html.Raw(ViewBag.pagingString)
        </div>
    </div>
}
<!--================================#END CHO DANH CHO VIEC SHOW FORM===============================================-->
