@model IEnumerable<eProjectsSemIII.Models.Exhibitions> 
<!--------------------THE LIST ALL EXHIBITIONS--------------------->
<div class="content-left-title">
    List of the exhibitions
</div>
<div class="content-left-content">
    @foreach (var exhibition in Model)
    {
        <div class="content-left-content-item">
            <div class="item-image">
                <img src="@Url.Content("~/Content/Images/exhibitions/" + @exhibition.Image)" alt="@exhibition.Name" />
            </div>
            <div class="item-detail">
                <div class="item-detail-title">
                    <a href="@Url.Content("~/exhibition/detail/" + @exhibition.Alias)">@exhibition.Name</a>
                </div>
                <div class="item-detail-content">
                    @if (exhibition.Description.Length > 350)
                    {
                        @exhibition.Description.Substring(0, 350)
                    }
                    else
                    {
                        @exhibition.Description
                    }...
                </div>
                <div class="item-detail-date">
                    Start date:@exhibition.StartDate.ToString("dd/MMM/yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))
                    - @exhibition.EndDate.ToString("dd/MMM/yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))
                </div>
                <div class="item-detail-link">
                    <a href="@Url.Content("~/exhibition/detail/" + @exhibition.Alias)")>View detail</a>
                </div>
            </div>
        </div>                           
    }
</div>
@if (ViewBag.pagingString != null)
{
    <div class="paging">
        @Html.Raw(ViewBag.pagingString)
    </div>
}
